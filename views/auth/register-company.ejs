<%- include('../partials/header') %>

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Register as Employer</h4>
            </div>
            <div class="card-body">
                <form action="/register-company" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Account Information</h5>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address*</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= locals.values ? values.email : '' %>" required>
                                <div class="form-text">This will be used to login to your account.</div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password*</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                                <div class="form-text">Use at least 8 characters with a mix of letters, numbers & symbols.</div>
                            </div>
                            <div class="mb-3">
                                <label for="confirm_password" class="form-label">Confirm Password*</label>
                                <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5>Company Information</h5>
                            <div class="mb-3">
                                <label for="company_name" class="form-label">Company Name*</label>
                                <input type="text" class="form-control" id="company_name" name="company_name" value="<%= locals.values ? values.company_name : '' %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="industry" class="form-label">Industry</label>
                                <input type="text" class="form-control" id="industry" name="industry" value="<%= locals.values ? values.industry : '' %>">
                            </div>
                            <div class="mb-3">
                                <label for="company_size" class="form-label">Company Size</label>
                                <select class="form-select" id="company_size" name="company_size">
                                    <option value="" <%= !locals.values || !values.company_size ? 'selected' : '' %>>Select company size</option>
                                    <option value="1-10" <%= locals.values && values.company_size === '1-10' ? 'selected' : '' %>>1-10 employees</option>
                                    <option value="11-50" <%= locals.values && values.company_size === '11-50' ? 'selected' : '' %>>11-50 employees</option>
                                    <option value="51-200" <%= locals.values && values.company_size === '51-200' ? 'selected' : '' %>>51-200 employees</option>
                                    <option value="201-500" <%= locals.values && values.company_size === '201-500' ? 'selected' : '' %>>201-500 employees</option>
                                    <option value="501-1000" <%= locals.values && values.company_size === '501-1000' ? 'selected' : '' %>>501-1000 employees</option>
                                    <option value="1001+" <%= locals.values && values.company_size === '1001+' ? 'selected' : '' %>>1001+ employees</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="website" class="form-label">Website</label>
                                <input type="url" class="form-control" id="website" name="website" value="<%= locals.values ? values.website : '' %>" placeholder="https://example.com">
                            </div>
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" class="form-control" id="location" name="location" value="<%= locals.values ? values.location : '' %>" placeholder="City, Country">
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Company Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= locals.values ? values.description : '' %></textarea>
                    </div>
                    
                    <div class="mt-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label" for="terms">
                                I agree to the Terms of Service and Privacy Policy
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Create Company Account</button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light">
                <div class="text-center">
                    <p class="mb-0">Already have an account? <a href="/login">Login here</a></p>
                    <p class="mt-2">Looking for a job? <a href="/register">Register as Job Seeker</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>